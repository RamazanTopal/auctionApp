<%- include('partials/_header') -%>
<body>
    <%- include('partials/_navigation') -%>
    <div class="container mt-5">
        <!-- Modal Button -->
        <div class="col-lg-12 text-center mt-5">
            <button id="ramazan" class="btn btn-lg btn-warning rounded-0 text-white" href="#"
                data-toggle="modal" data-target="#addProduct"><span>CREATE NEW
                    PRODUCT</span></button>
        </div>
		<!-- ADD Modal -->
		<div class="modal fade" id="addProduct" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-body customer-box">
						<!-- Tab panes -->
						<div class="tab-content">
							<div class="tab-pane active" id="Login">
								<form method="POST" action="/product/dashboard" class="form-horizontal">
									<div class="form-group">
										<div class="col-sm-12">
											<input type="text" name="name" class="form-control"  placeholder="Product Name">
										</div>
									</div>
									<div class="form-group">
										<div class="col-sm-12">
											<input type="text" name="price" class="form-control"  placeholder="Product Price">
										</div>
									</div>
									<div class="row">
										<div class="offset-sm-8 col-sm-4">
											<button type="submit" class="btn btn-primary btn-radius btn-brd grd1">
												Add Product
											</button>
											<button type="submit" class="btn btn-danger btn-radius btn-brd grd1"
												data-dismiss="modal" aria-hidden="true">
												Cancel
											</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
        <!--ADD MODAL FİNİSH-->
        <div class="col-md-10 offset-md-1 mt-5">
            <table class="table table-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Offerings Detail</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i< products.length; i++) { %>
                        <tr>
                            <th scope="row"><%=products[i]._id %></th>
                            <td><%=products[i].name %></td>
                            <td><%=products[i].price %></td>
                            <td><a href="/product/offer/<%= products[i]._id %>" class="btn btn-warning rounded-0 text-white"><span>Detail</span></a></td>
                            <td><a href="/product/dashboard/<%= products[i]._id %>?_method=DELETE" 
                            onclick="return confirm('ARE YOU SURE')" class="btn btn-danger rounded-0 text-white"><span>DELETE</span></a></td>
                        </tr>
                    <% } %>
                
                </tbody>
              </table>
        </div>
    </div>
</body>
</html>