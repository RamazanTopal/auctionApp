<%- include('partials/_header') -%>
<body>
    <%- include('partials/_navigation') -%>
    <div class="container mt-5">
        <div class="row">
          <div class="col-md-12">
            <% if (flashMessages) { %>
              <% if (flashMessages.success) { %>
                <div class="alert alert-success">
              <%= flashMessages.success %>
              </div>
              <% } else if (flashMessages.error) { %>
               <div class="alert alert-danger">
              <%= flashMessages.error %>
              </div>
              <% } %>
              <% } %>
          </div>
          <% for (let i=0; i< products.length; i++) { %>
            <div class="col-md-4 mt-5" >
                <div class="card" style="width: 18rem;" >
                    <img class="card-img-top" src="/image/vinc.jpg" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title"><%=products[i]._id %></h5>
                      <p class="card-text"><%=products[i].name %></p>
                      <p id="tarihh" class="card-text"><%=products[i].start_date %></p>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">
                        sale price : <%=products[i].price %> TL</li>

                    </ul>
                    <div class="card-body">
                      <a href="/product/offerdetail/<%= products[i]._id %>" class="btn btn-warning rounded-0 text-white"><span>Detail</span></a>
                      <a id="submitOffer" href="/product/offer/<%= products[i]._id %>" data-toggle="modal" data-target="#addProduct<%= products[i]._id %>" class="btn btn-primary rounded-0 text-white" value="<%= products[i]._id %>"><span>Submit an Offer</span></a>
                    </div>
                </div>
              
                		<!-- ADD Modal -->
          <div class="modal fade" id="addProduct<%= products[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
              <div class="modal-content">
                <div class="modal-body customer-box">
                  <!-- Tab panes -->
                  <div class="tab-content">
                    <div class="tab-pane active" id="Login">
                      <form method="POST" action="/product/offer/<%= products[i]._id %>?_method=PUT" class="form-horizontal">
                        <div class="form-group">
                          <div class="col-sm-12">
                            <input id="offertext" type="text" name="offer" class="form-control"  placeholder="Offer Price">
                          </div>
                        </div>
                        <div class="row">
                          <div class="offset-sm-8 col-sm-4">
                            <button type="submit" class="btn btn-primary btn-radius btn-brd grd1">
                              Add Offer
                            </button>
                            <button type="submit" class="btn btn-danger btn-radius btn-brd grd1"
                              data-dismiss="modal" aria-hidden="true">
                              Cancel
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <!--Offer MODAL FİNİSH-->
            </div>
           
          <%}%>

        </div>
    </div>
    <script src="/js/index.js"></script>
</body>
</html>